<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirmaSQLite.MainPage">

    <StackLayout>
        <Button Text="Firmar" x:Name="BtnFirma" Clicked="BtnFirma_Clicked"/>



        <StackLayout Padding="10">

            <ListView x:Name="ListaSGNT" ItemTapped="ListaFirmas_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding nombreFirma}" />
                    </DataTemplate 
                     >
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </StackLayout>

</ContentPage>
